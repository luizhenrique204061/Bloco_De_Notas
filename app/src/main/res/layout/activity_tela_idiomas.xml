<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaIdiomas">

    <TextView
        android:id="@+id/texto_idioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45dp"
        style="@style/TEXTO_LOGIN"
        android:textSize="20sp"
        android:text="@string/texto_selecione_o_idioma_abaixo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <Spinner
        android:id="@+id/seletor_idiomas"
        app:layout_constraintStart_toStartOf="@id/texto_idioma"
        app:layout_constraintEnd_toEndOf="@id/texto_idioma"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/texto_idioma"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>