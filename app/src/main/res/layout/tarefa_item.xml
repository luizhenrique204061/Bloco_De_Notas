<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/descricao_lista"
        style="@style/TEXTO_LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordas_lista_tarefas"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Teste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/remover_tarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_fechar"
        app:layout_constraintBottom_toBottomOf="@id/descricao_lista"
        app:layout_constraintEnd_toEndOf="@id/descricao_lista"
        app:layout_constraintTop_toTopOf="@id/descricao_lista" />

</androidx.constraintlayout.widget.ConstraintLayout>