<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_tela_principal">

    <fragment
        android:id="@+id/nav_tela_principal"
        android:name="com.olamundo.blocodenotas.ui.fragmento_tela_principal.FragmentoTelaPrincipal"
        android:label="@string/menu_tela_principal"
        tools:layout="@layout/fragmento_tela_principal" />

    <fragment
        android:id="@+id/nav_tarefas"
        android:name="com.olamundo.blocodenotas.ui.fragmento_tarefas.FragmentoTarefas"
        android:label="@string/menu_tarefas"
        tools:layout="@layout/fragmento_tarefas" />

    <fragment
        android:id="@+id/nav_tela_login"
        android:name="com.olamundo.blocodenotas.ui.fragmento_login.FragmentoLogin"
        android:label="@string/menu_login"
        tools:layout="@layout/fragmento_login" />

    <fragment android:id="@+id/nav_dados_do_usuario"
        android:name="com.olamundo.blocodenotas.ui.DadosUsuario.FragmentoDadosDoUsuario"
        android:label="@string/definicoes_da_conta"
        tools:layout="@layout/fragment_fragmento_dados_do_usuario"
        />

    <activity android:id="@+id/TelaLogin"
        android:name="com.olamundo.blocodenotas.TelaLogin"
        android:label="@string/arquivo_seguro"
        tools:layout="@layout/activity_tela_login"
        />

    <activity android:id="@+id/TelaIdiomas"
        android:name="com.olamundo.blocodenotas.TelaIdiomas"
        android:label="@string/idiomas"
        tools:layout="@layout/activity_tela_idiomas"
        />

</navigation>